<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="container py-5 h-100 signin-form">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <h2>FORGOT YOUR PASSWORD?</h2>
        <p class="text-white-50 text-center">Please enter an email to reset password</p>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", :style=> 'width: 300px'},
                          label: false,
                          class: 'signin-input' %>
              <br>
            </div>

            <div class="form-actions-btn">
              <%= f.button :submit, "Submit", class: "signin-btn" %>
            </div>
          <% end %>
        </div>
      </div>

      <br>
    </div>
  </div>
</div>
