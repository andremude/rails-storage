<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
    <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="container py-5 h-100 signup-form">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <h2>SIGN UP</h2>
        <p class="text-white-50 text-center">Please enter an email and password</p>
          <%= simple_form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
            <div class="form-inputs">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "given-name", :style=> 'width: 300px'},
                          label: false,
                          placeholder: "First Name",
                          class: "form-input" %>
              <br>
              <%= f.input :last_name,
                          required: true,
                          input_html: { autocomplete: "family-name", :style=> 'width: 300px'},
                          label: false,
                          placeholder: "Last Name",
                          class: "form-input" %>
              <br>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", :style=> 'width: 300px'},
                          label: false,
                          placeholder: "Email",
                          class: "form-input" %>
              <br>
              <%= f.input :password,
                          required: true,
                          input_html: { autocomplete: "current-password", :style=> 'width: 300px'},
                          label: false,
                          placeholder: "Password",
                          class: "form-input" %>
              <br>
              <%= f.input :password_confirmation,
                          required: true,
                          label: false,
                          placeholder: "Confirm Password",
                          input_html: {:style=> 'width: 300px'},
                          class: "form-input" %>
              <br>
            </div>
            <%# <div class="rememberable"> %>
              <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%# </div> %>
            <div class="form-actions-btn">
              <%= f.button :submit, "Sign Up", id: "signupBtn" %>
            </div>
            <p class="text-center">Already have an account? <%= link_to "Log In", new_user_session_path, class: "link-info" %></p>
          <% end %>
        </div>
      </div>

      <br>
    </div>
  </div>
</div>
