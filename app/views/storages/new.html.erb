<div class="container-fluid p-4">
  <div class="container card-create-tour mt-5 mb-5 p-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <p>Let's create a post for your storage </p>
          <%= simple_form_for(Storage.new) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :title, label: "Title", placeholder: "Title" %>
            <%= f.input :description, label: "Description", placeholder: "Description" %>
            <%= f.input :address, label: "Address", placeholder: "Address" %>
            <%= f.input :city, label: "City", placeholder: "City" %>
            <%= f.label :country %>
            <%= f.select :country, [["United States", "US"], ["United Kingdom", "GB"], ["Spain", "ES"],["Germany", "DE"], ["Netherlands", "NL"], ["Portugal", "PT"], ["Belgium", "BE"], ["France", "FR"]], include_blank: "Select Country" %>
            <%#= f.country_select :country, {priority_countries: ["SG", "US"], include_blank: "select country"} %>
            <%= f.input :meters, label: "Meters", placeholder: "Meters" %>
            <%= f.label :type %>
            <%= f.select :type, ["Business inventory", "Car parking", "Boats", "RV parking", "Personal storage", "Furniture"], include_blank: "Select Type" %>
            <%= f.input :price, label: "Price", placeholder: "Price" %>
            <%#= f.input :photos,label: 'Fotos', as: :file, input_html: { multiple: true } %>
            <%= f.button :submit, 'Create Post', class: "btn btn-success p-3 w-100 rounded",style:"font-size:18px;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
